<div class="main-wrapper">
  
  <%= render "shared/side"%>
  
  <div class="post-contents">
    <h2 class="main-title">メモ一覧</h2>
    <ul class="post-lists">
      <% @posts.each do |post| %>
        <li class="list">
          <%= link_to post_path(post.id) do %>
            <div class="post-img-content">
              <%= image_tag post.image, class: "post-images" if post.image.present? %>
            </div>
            <div class='post-info'>
              <h3 class='post-title'>
                <%= "#{post.title}" %>
              </h3>
              <div class='post-detail'>
                <span><%= "#{post.detail}" %></span>  
              </div>
            </div>
          <% end %>
        </li>
      <% end %>
      <% if @posts.length == 0 %> 
        <li class='list'>
          <%= link_to '#' do %>
            <div class="post-img-content">
              <%= image_tag "https://tech-master.s3.amazonaws.com/uploads/curriculums/images/Rails1-4/sample.jpg", class: "post-images" %> 
            </div>  
            <div class='post-info'>
              <h3 class='post-title'>
                  商品を出品してださい。
              </h3>
            </div> 
          <% end %> 
        </li>
      <% end %> 
    </ul>
    <%# <div class="page-container">
      <%= paginate @posts, class: "page" %> %>
    <%# </div> %>
  </div>
</div>
