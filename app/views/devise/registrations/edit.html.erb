<div class="main-wrapper">

  <%= render "shared/side"%>

  <div class="edit-main">
    <div class="login-edit-box">
      <h2>編集</h2>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>

        <%= render "devise/shared/error_messages", resource: resource %>
        
        <div class="img-upload">
          <div class="weight-bold-text">
            イメージ画像
          </div>
          <div class="click-upload">
            <%= f.file_field :image, id: "user-edit-image" %>
          </div>
        </div>
        <div id="user-edit-image-list"></div>
        <% image_tag @image, id: "user-edit-image-file" if @image.present? %>
        <div class="field">
          <%= f.label :email %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
        </div>
        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
          <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
        <% end %>
        <div class="field">
          <%= f.label :新パスワード %><br />
          <%= f.password_field :password, autocomplete: "new-password" %>
          <% if @minimum_password_length %>
            <br />
            <em><%= @minimum_password_length %> 文字以上入力してください</em>
          <% end %>
        </div>
        <div class="field">
          <%= f.label :確認用パスワード%><br />
          <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
        </div>
        <div class="field">
          <%= f.label :表示名 %><br />
          <%= f.text_field :nickname, autocomplete: "email" %>
        </div>
        <div class="field">
          <%= f.label :旧パスワード %><br />
          <%= f.password_field :current_password, autocomplete: "current-password" %>
        </div>
        <div class="actions">
          <%= f.submit "編集" %>
        </div>
      <% end %>
      <%= link_to "Back", :back %>
    </div> 
  </div>
</div>
