<div class="main-wrapper">

  <%= render "shared/side"%>

  <div class="main">
    <div class="login-box">
      <h2 class="login-title">出品者様用ログイン</h2>
      <%= form_with model: @user, url: user_session_path, id: "new_user", class:"new_user", local: true do |f| %>

        <div class='login-flash-message'>
          <%= flash[:notice] %>
          <%= flash[:alert] %>
        </div>

        <div class="form-control">
          <%= f.label "メールアドレス" %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "t-form" %>
        </div> 

        <div class="form-control"> 
          <%= f.label "パスワード" %><br />
          <%= f.password_field :password, autocomplete: "current-password", class: "t-form" %>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="form-control">
            <%= f.check_box :remember_me %>
            <%= f.label "完了しました" %>
          </div>
        <% end %>

        <div class="form-control">
        <%= f.submit "ログイン", class: "submit-btn", id: "f-s-submit" %>

        </div>
      <% end %>
    </div>
  </div>
</div>